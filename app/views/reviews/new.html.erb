          <input class="newBar" type="text" name="review[rating]" placeholder="Rating..." value="">
          <br/><br/>
          <input class="newBar" type="text" name="review[review]" placeholder="Review..." value="">
          <input class="newBar" type="text" name="review[book_id]" value="<%= params[:format] %>" style="display: none">
          <br/><br/><br/>
          <label style="margin: 0px 360px; float: left">
            <input id="submit-link" type="submit" name="submit" style="display: none"/>
            <svg width="11mm" height="11mm" viewBox="0 0 5.5 5.5">
              <g transform="translate(.14376 -291.64)">
