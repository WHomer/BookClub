      <div>
        <div id="addingHeader">Add New:</div>
        <form style="width: 100%" action="/reviews" method="post">
          <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
          <input class="newBar" type="text" name="review[title]" placeholder="Title..." value="">
